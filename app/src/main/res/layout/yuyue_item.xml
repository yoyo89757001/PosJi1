<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@drawable/main_touchedbackground"
    android:layout_height="66dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="66dp">

        <ImageView
            android:id="@+id/touxiang3"
            android:layout_width="54dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_height="54dp" />

        <TextView
            android:textSize="12sp"
            android:id="@+id/name"
            android:maxLength="4"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toRightOf="@+id/touxiang3"
            android:textColor="@color/testdi"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ffr"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:gravity="center_vertical|right"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:text="来访时间"
                android:layout_marginRight="10dp"
                android:textColor="@color/testdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:id="@+id/time"
                android:text="2019-11-11"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/testdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/ffr"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:gravity="center_vertical|right"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:text="手机号码"
                android:layout_marginRight="10dp"
                android:textColor="@color/testdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:id="@+id/shouji"
                android:text="15544334556"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/testdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>