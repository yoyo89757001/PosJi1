<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:text="点击备注可以填写备注信息"
    android:maxEms="1"
    android:textSize="12sp"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="10dp"
    android:textColor="@color/textcolor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <ScrollView
        android:scrollbars="none"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
        android:layout_width="192dp"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/baocun"
        android:background="@drawable/zhongkong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="80dp"
        android:layout_marginTop="10dp"
        android:id="@+id/logo"
        android:layout_gravity="center_horizontal"
        android:layout_height="30dp" />

<TextView
    android:textColor="@color/blake"
    android:layout_marginTop="10dp"
    android:textSize="18sp"
    android:text="临时出入证"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="40dp" />


        <LinearLayout
            android:background="@drawable/zhongkong"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/blake"
                    android:text="来访人:"
                    android:layout_height="match_parent" />

                <View
                    android:layout_width="1dp"
                    android:background="@color/blake"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:id="@+id/name"
                    android:textSize="10sp"
                    android:textColor="@color/blake"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="1dp"
                    android:background="@color/blake"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/blake"
                    android:text="来访人单位:"
                    android:layout_height="match_parent" />

                <View
                    android:layout_width="1dp"
                    android:background="@color/blake"
                    android:layout_height="match_parent"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:cursorVisible="false"
                    android:id="@+id/danwei"
                    android:background="@null"
                    android:textSize="10sp"
                    android:textColor="@color/blake"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <View
                android:background="@color/blake"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/blake"
                    android:text="进楼\n日期:"
                    android:layout_height="match_parent" />

                <View
                    android:layout_width="1dp"
                    android:background="@color/blake"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:id="@+id/riqi"
                    android:textSize="10sp"
                    android:textColor="@color/blake"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="1dp"
                    android:background="@color/blake"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/blake"
                    android:text="被访人:"
                    android:layout_height="match_parent" />

                <View
                    android:layout_width="1dp"
                    android:background="@color/blake"
                    android:layout_height="match_parent"/>

                <EditText
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:cursorVisible="false"
                    android:gravity="center"
                    android:id="@+id/beifangren"
                    android:textSize="10sp"
                    android:textColor="@color/blake"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <View
                android:background="@color/blake"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textColor="@color/blake"
            android:textSize="10sp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:text="备注:"
            android:id="@+id/rrr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textColor="@color/blake"
            android:textSize="10sp"
            android:cursorVisible="false"
            android:background="@null"
            android:layout_toRightOf="@+id/rrr"
            android:layout_marginLeft="6dp"
            android:id="@+id/beizhu"
            android:hint=" 无"
            android:textColorHint="@color/blake"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>

        <View
            android:background="@color/blake"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/dsd"
                    android:layout_width="1dp"
                    android:layout_toLeftOf="@+id/eee"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/blake"/>

                    <TextView
                        android:id="@+id/eee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="NO:"
                        android:textColor="@color/blake"
                        android:textSize="10sp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/bianha" />

                <TextView
                    android:id="@+id/bianha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="16dp"
                    android:text="103456"
                    android:textColor="@color/blake"
                    android:textSize="10sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/erweima"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:background="@color/CLEAR"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="50dp" />

        <TextView
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:textColor="@color/blake"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp"
            android:text="请妥善保管,离开前请交回前台"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    </ScrollView>

    <Button
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="返回首页"
        android:id="@+id/guanbi"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/jiaohu3"
        android:layout_width="90dp"
        android:layout_height="46dp" />

    <Button
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="打印"
        android:id="@+id/dayin"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/jiaohu3"
        android:layout_width="90dp"
        android:layout_height="46dp" />


</RelativeLayout>